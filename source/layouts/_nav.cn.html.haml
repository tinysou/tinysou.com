%nav.tab-bar.show-for-small
  %section.left-small
    %a.left-off-canvas-toggle.menu-icon
      %span
  %section.middle.tab-bar-section
    %a{href: '/'}
      %h1= '微搜索'
%aside.left-off-canvas-menu.show-for-small
  %ul.off-canvas-list
    %li.nav-home
      %a.reverse{href: '/'} 首页
    %li.nav-features
      %a.reverse{href: '/features.html'} 特性
    %li.nav-plan
      %a.reverse{href: '/plan.html'} 套餐价格
    %li
      %a.reverse{href: 'http://doc.tinysou.com'} 文档
    %li
      %a.reverse{href: 'http://blog.tinysou.com'} 博客
    %li
      %a.reverse{href: 'http://dashboard.tinysou.com/login'} 进入控制台
%a.exit-off-canvas

%nav.top-bar.hide-for-small{:'data-topbar' => true}
  %ul.title-area
    %li.name
      %a.default{href: '/'}
        = image_tag 'logo.png'
        &nbsp;
        微搜索
  %section.top-bar-section
    %ul.left
      - unless current_page.data.nosearch
        %li.has-form
          %form
            %input.search-input{type: 'search', id: 'ts-search-input', placeholder: '搜索'}
      %li.nav-features
        %a.reverse{href: '/features.html'} 特性
      %li.nav-plan
        %a.reverse{href: '/plan.html'} 套餐价格

  %section.top-bar-section
    %ul.right
      %li.nav-home
        %a.reverse{href: '/'} 首页
      %li
        %a.reverse{href: 'http://doc.tinysou.com'} 文档
      %li
        %a.reverse{href: 'http://blog.tinysou.com'} 博客
      %li
        %a.reverse{href: 'http://dashboard.tinysou.com/login'}
          = '进入控制台'
